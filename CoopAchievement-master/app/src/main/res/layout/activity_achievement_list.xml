<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".AchievementLevelListActivity">

    <ListView
        android:id="@+id/listViewAchievement"
        android:layout_width="365dp"
        android:layout_height="458dp"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:listSelector="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAchievementNumPlayer"
        app:layout_constraintVertical_bias="0.19999999"
        tools:context="abhiandroid.com.listexample.MainActivity" />

    <EditText
        android:id="@+id/etAchievementNumPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:autofillHints="1"
        android:ems="10"
        android:hint="@string/number_of_players"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="166dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/set_difficulty"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@+id/listViewAchievement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAchievementNumPlayer"
        app:layout_constraintVertical_bias="0.35" />

    <Spinner
        android:id="@+id/spinner_dropdown_achievement"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/listViewAchievement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAchievementNumPlayer"
        app:layout_constraintVertical_bias="0.555" />

    <View
        android:id="@+id/divider39"
        android:layout_width="373dp"
        android:layout_height="4dp"
        android:background="@color/black"
        android:backgroundTint="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/listViewAchievement"
        app:layout_constraintEnd_toEndOf="@+id/listViewAchievement"
        app:layout_constraintStart_toStartOf="@+id/listViewAchievement" />

    <View
        android:id="@+id/divider41"
        android:layout_width="373dp"
        android:layout_height="4dp"
        android:background="@color/black"
        android:backgroundTint="#2196F3"
        app:layout_constraintEnd_toEndOf="@+id/listViewAchievement"
        app:layout_constraintStart_toStartOf="@+id/listViewAchievement"
        app:layout_constraintTop_toBottomOf="@+id/listViewAchievement" />

    <View
        android:id="@+id/divider42"
        android:layout_width="4dp"
        android:layout_height="466dp"
        android:background="@color/black"
        android:backgroundTint="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/divider41"
        app:layout_constraintEnd_toStartOf="@+id/listViewAchievement"
        app:layout_constraintTop_toBottomOf="@+id/divider39" />

    <View
        android:id="@+id/divider43"
        android:layout_width="4dp"
        android:layout_height="466dp"
        android:background="@color/black"
        android:backgroundTint="#2196F3"
        app:layout_constraintBottom_toTopOf="@+id/divider41"
        app:layout_constraintStart_toEndOf="@+id/listViewAchievement"
        app:layout_constraintTop_toBottomOf="@+id/divider39" />

</androidx.constraintlayout.widget.ConstraintLayout>