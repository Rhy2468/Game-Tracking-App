<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvDisplayGames"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="122dp">

        <ImageView
            android:id="@+id/ivAchievementImage"
            android:layout_width="66dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="294dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/game_icon"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tvGameDate"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="0dp"
            android:layout_toEndOf="@+id/divider21"
            android:text="@string/game_date"
            android:textAlignment="textStart"
            android:textColor="#0097A7"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAchievementLevel"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGroupScore"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-67dp"
            android:layout_toEndOf="@+id/divider21"
            android:drawablePadding="2dp"
            android:text="@string/achievement"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNumPlayers"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvGroupScore"
            android:layout_alignBottom="@+id/tvGroupScore"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-22dp"
            android:layout_marginBottom="23dp"
            android:layout_toEndOf="@+id/divider21"
            android:drawablePadding="2dp"
            android:text="@string/num_of_players"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGroupScore"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGameDate"
            android:layout_marginStart="3dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@+id/divider21"
            android:drawablePadding="2dp"
            android:text="@string/total_group_score"
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/difficulty"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/ivAchievementImage"
            android:layout_alignEnd="@+id/ivAchievementImage"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="0dp"
            android:drawablePadding="2dp"
            android:text="Difficulty"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider21"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="113dp" />

        <View
            android:id="@+id/divider29"
            android:layout_width="4dp"
            android:layout_height="98dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/black"
            android:backgroundTint="#2196F3" />

        <View
            android:id="@+id/divider30"
            android:layout_width="4dp"
            android:layout_height="98dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="106dp"
            android:layout_marginBottom="12dp"
            android:background="@color/black"
            android:backgroundTint="#2196F3" />

        <View
            android:id="@+id/divider31"
            android:layout_width="98dp"
            android:layout_height="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="12dp"
            android:background="@color/black"
            android:backgroundTint="#2196F3" />

        <View
            android:id="@+id/divider32"
            android:layout_width="98dp"
            android:layout_height="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/black"
            android:backgroundTint="#2196F3" />

        <View
            android:id="@+id/divider33"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_below="@+id/tvGameDate"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@+id/divider21"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/ivGamePhoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/game_icon"
            app:srcCompat="@drawable/ic_launcher_foreground"
            tools:ignore="ImageContrastCheck" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>